{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}


{{> full-header}}

<main class="container">
    <div class="row">
        <div class="col-xs-12 single-content">

            <h1>{{ title }}</h1>

            {{ content }}

            <hr class="abt"/>

            {{#get "tags" include="count.posts"}}
            {{#foreach tags}}
            <div class="main-header-content inner">
                <h2 class="page-title"><a href="{{url}}">{{name}}</a> ({{count.posts}})</h2>
                <p class="page-description">
                    {{#if description}}
                        {{description}}
                    {{else}}
                        Posts tagged with {{name}}
                    {{/if}}
                </p>
            </div>
            {{/foreach}}
            {{/get}} 

        </div><!-- main-content/col -->
    </div> <!--/row -->

</main> <!-- /container -->
{{/post}}

<footer class="single single-page">
    <div class="container">
        <div class="col-sm-12">
            <p>&copy; <time datetime="{{date format="YYYY"}}">{{date format="YYYY"}}</time> {{@blog.title}}</p>
        </div>
    </div>
</footer>